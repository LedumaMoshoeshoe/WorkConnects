@model WorkConnect.Models.Job
@{
    ViewData["Title"] = "Delete Job";
}
<div class="card fade-in">
    <h2 class="mb-3 text-danger">Delete Job</h2>
    <p>Are you sure you want to delete <strong>@Model.JobTitle</strong>?</p>

    <dl class="row">
        <dt class="col-sm-3">Service Type</dt>
        <dd class="col-sm-9">@Model.ServiceType</dd>

        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Model.Location</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-warning">Cancel</a>
        </div>
    </form>
</div>
