@model IEnumerable<WorkConnect.Models.Worker>
@{
    ViewData["Title"] = "Workers";
}

<div class="card fade-in">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Workers</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add Worker</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.First().JobTitle)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Location)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Languages)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Experience)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Phone)</th>
                        <th>Photo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var worker in Model)
                    {
                        <tr>
                            <td>@worker.Name</td>
                            <td>@worker.JobTitle</td>
                            <td>@worker.Location</td>
                            <td>@worker.Languages</td>
                            <td>@worker.Experience</td>
                            <td>@worker.Phone</td>
                            <td>
                                @if (!string.IsNullOrEmpty(worker.PhotoUrl))
                                {
                                    <img src="@worker.PhotoUrl" alt="Photo" class="img-thumbnail" style="width:50px; height:50px;" />
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="text-nowrap">
                                <a asp-action="Details" asp-route-id="@worker.Id" class="btn btn-sm btn-primary" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@worker.Id" class="btn btn-sm btn-success ms-1" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@worker.Id" class="btn btn-sm btn-danger ms-1" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No workers found. Click <a asp-action="Create">here</a> to add a worker.
        </div>
    }
</div>

<style>
    .fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

<!-- Make sure Bootstrap Icons are included in your layout -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
